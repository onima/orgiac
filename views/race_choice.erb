<% if @presenter.players_without_race %>
  <form action="/choose_race" method="post">
  <fieldset>
    <legend>RaceChoice</legend>
    <div class="form-group form-horizontal">
      <div class="row">
        <label class="col-lg-offset-1 control-label left-shift">
          Select Player
        </label>
        <div class="btn-group" data-toggle="buttons">
          <% @presenter.players.each do |player| %>
            <% if player.race.empty? %>
            <label class="btn btn-primary btn-sm round left-shift">
            <input type="radio" name="player" value="<%= player.name %>">
            <%= player.name %>
          </label>
        <% end %>
        <% end %>
        </div>
      </div><br>
      <div class="row">
        <label class="col-lg-offset-1 control-label left-shift">
          Select A Race
        </label>
        <div class="btn-group" data-toggle="buttons">
          <% @presenter.races.each do |race| %>
            <label class="btn btn-primary btn-sm left-shift">
            <input type="radio" name="race" value="<%= race.name %>">
            <%= race.name %>
          </label>
        <% end %>
        </div>
      </div>
      <div class="row starter-template">
        <input type="submit" value="Submit" class="btn btn-sm btn-info">
      </div>
    </div>
  </fieldset>
</form>
<% end %>
<table class="table table-striped table-condensed table-hover table-responsive">
  <fieldset>
    <legend>Players Board</legend>
    <thead>
      <tr class="info">
        <th>#</th>
        <th>Player</th>
        <th>Race Choosen</th>
        <th>Player Color</th>
      </tr>
    </thead>
    <tbody>
    <% index = 1%>
    <% @presenter.players.each do |player| %>
      <tr>
      <td><%= index %></td>
      <% index += 1 %>
      <td><%= player.name %></td>
      <td><%= player.race.first.name if player.race.any? %></td>
      <td><%= player.color %></td>
    </tr>
  <% end %>
    </tbody>
  </fieldset>
</table>
<div class="row starter-template">
  <a href="/play_turn" class="btn btn-default">
    Go To Battlefield <span class="glyphicon glyphicon-circle-arrow-up"></span>
  </a>
</div>
